  <script>
    // ==================== Configuration ====================
    const defaultConfig = {
      app_title: 'نظام المحاسبة',
      company_name: 'شركتي'
    };
    
    let config = { ...defaultConfig };
    
    // ==================== State Management ====================
    let currentUser = null;
    let allData = [];
    let deleteCallback = null;
    let isLoading = false;
    
    // ==================== Toast Notifications ====================
    function showToast(message, type = 'success') {
      const container = document.getElementById('toast-container');
      const toast = document.createElement('div');
      const bgColor = type === 'success' ? 'bg-emerald-500' : type === 'error' ? 'bg-red-500' : 'bg-blue-500';
      
      toast.className = `toast ${bgColor} text-white px-4 py-3 rounded-xl shadow-lg flex items-center gap-3`;
      toast.innerHTML = `
        <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          ${type === 'success' 
            ? '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>'
            : type === 'error'
            ? '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>'
            : '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>'
          }
        </svg>
        <span>${message}</span>
      `;
      
      container.appendChild(toast);
      setTimeout(() => toast.remove(), 3000);
    }
    
    // ==================== Authentication ====================
    function showLogin() {
      document.getElementById('login-page').classList.remove('hidden');
      document.getElementById('register-page').classList.add('hidden');
    }
    
    function showRegister() {
      document.getElementById('login-page').classList.add('hidden');
      document.getElementById('register-page').classList.remove('hidden');
    }
    
    function showForgotPassword() {
      document.getElementById('forgot-modal').classList.remove('hidden');
    }
    
    function closeForgotModal() {
      document.getElementById('forgot-modal').classList.add('hidden');
    }
    
    function sendResetEmail() {
      const email = document.getElementById('forgot-email').value;
      if (email) {
        showToast('تم إرسال رابط إعادة التعيين إلى بريدك الإلكتروني');
        closeForgotModal();
      }
    }
    
    document.getElementById('login-form').addEventListener('submit', function(e) {
      e.preventDefault();
      const email = document.getElementById('login-email').value;
      const password = document.getElementById('login-password').value;
      
      // Demo login
      currentUser = {
        name: 'أحمد محمد',
        email: email,
        role: 'محاسب'
      };
      
      localStorage.setItem('currentUser', JSON.stringify(currentUser));
      enterApp();
      showToast('تم تسجيل الدخول بنجاح');
    });
    
    document.getElementById('register-form').addEventListener('submit', function(e) {
      e.preventDefault();
      const name = document.getElementById('register-name').value;
      const email = document.getElementById('register-email').value;
      const password = document.getElementById('register-password').value;
      const confirm = document.getElementById('register-confirm').value;
      
      if (password !== confirm) {
        showToast('كلمات المرور غير متطابقة', 'error');
        return;
      }
      
      currentUser = {
        name: name,
        email: email,
        role: 'محاسب'
      };
      
      localStorage.setItem('currentUser', JSON.stringify(currentUser));
      enterApp();
      showToast('تم إنشاء الحساب بنجاح');
    });
    
    function logout() {
      currentUser = null;
      localStorage.removeItem('currentUser');
      document.getElementById('main-app').classList.add('hidden');
      document.getElementById('login-page').classList.remove('hidden');
      showToast('تم تسجيل الخروج بنجاح');
    }
    
    function enterApp() {
      document.getElementById('login-page').classList.add('hidden');
      document.getElementById('register-page').classList.add('hidden');
      document.getElementById('main-app').classList.remove('hidden');
      updateUserDisplay();
      showPage('dashboard');
    }
    
    function updateUserDisplay() {
      if (!currentUser) return;
      
      document.getElementById('header-user-name').textContent = currentUser.name;
      document.getElementById('header-user-role').textContent = currentUser.role;
      document.getElementById('header-avatar').textContent = currentUser.name.charAt(0);
      document.getElementById('profile-name').textContent = currentUser.name;
      document.getElementById('profile-email').textContent = currentUser.email;
      document.getElementById('profile-role').textContent = currentUser.role;
      document.getElementById('profile-avatar').textContent = currentUser.name.charAt(0);
      document.getElementById('edit-name').value = currentUser.name;
      document.getElementById('edit-email').value = currentUser.email;
      document.getElementById('edit-role').value = currentUser.role;
    }
    
    // ==================== Navigation ====================
    function showPage(pageName) {
      // Hide all pages
      document.querySelectorAll('.page').forEach(p => p.classList.add('hidden'));
      
      // Show selected page
      const page = document.getElementById('page-' + pageName);
      if (page) {
        page.classList.remove('hidden');
        page.classList.add('fade-in');
      }
      
      // Update nav items
      document.querySelectorAll('.nav-item').forEach(item => {
        item.classList.remove('active');
        if (item.dataset.page === pageName) {
          item.classList.add('active');
        }
      });
      
      // Update page title
      const titles = {
        dashboard: 'لوحة التحكم',
        income: 'الإيرادات',
        expenses: 'المصروفات',
        ledger: 'دفتر الحسابات',
        currency: 'تحويل العملات',
        profile: 'الملف الشخصي'
      };
      document.getElementById('page-title').textContent = titles[pageName] || 'لوحة التحكم';
      
      // Close sidebar on mobile
      if (window.innerWidth < 1024) {
        closeSidebar();
      }
    }
    
    function toggleSidebar() {
      const sidebar = document.getElementById('sidebar');
      const overlay = document.getElementById('sidebar-overlay');
      sidebar.classList.toggle('translate-x-full');
      sidebar.classList.toggle('translate-x-0');
      overlay.classList.toggle('hidden');
    }
    
    function closeSidebar() {
      const sidebar = document.getElementById('sidebar');
      const overlay = document.getElementById('sidebar-overlay');
      sidebar.classList.add('translate-x-full');
      sidebar.classList.remove('translate-x-0');
      overlay.classList.add('hidden');
    }
    
    // ==================== Data SDK Handler ====================
    const dataHandler = {
      onDataChanged(data) {
        allData = data;
        renderAllLists();
        updateDashboardStats();
      }
    };
    
    // ==================== Helper Functions ====================
    function formatNumber(num) {
      return new Intl.NumberFormat('ar-IQ').format(num);
    }
    
    function formatDate(dateStr) {
      const date = new Date(dateStr);
      return date.toLocaleDateString('ar-IQ', { year: 'numeric', month: 'short', day: 'numeric' });
    }
    
    function getIncomes() {
      return allData.filter(item => item.type === 'income');
    }
    
    function getExpenses() {
      return allData.filter(item => item.type === 'expense');
    }
    
    function getConversions() {
      return allData.filter(item => item.type === 'conversion');
    }
    
    function convertToIQD(amount, currency, rate) {
      if (currency === 'IQD') return amount;
      return amount * rate;
    }
    
    // ==================== Dashboard Stats ====================
    function updateDashboardStats() {
      const rate = parseFloat(document.getElementById('exchange-rate').value) || 1460;
      
      const totalIncome = getIncomes().reduce((sum, item) => {
        return sum + convertToIQD(item.amount, item.currency, rate);
      }, 0);
      
      const totalExpenses = getExpenses().reduce((sum, item) => {
        return sum + convertToIQD(item.amount, item.currency, rate);
      }, 0);
      
      const netProfit = totalIncome - totalExpenses;
      
      document.getElementById('stat-income').textContent = formatNumber(Math.round(totalIncome));
      document.getElementById('stat-expenses').textContent = formatNumber(Math.round(totalExpenses));
      document.getElementById('stat-profit').textContent = formatNumber(Math.round(Math.abs(netProfit)));
      document.getElementById('stat-balance').textContent = formatNumber(Math.round(netProfit));
      
      // Update profit label color
      const profitLabel = document.getElementById('stat-profit-label');
      if (netProfit < 0) {
        profitLabel.textContent = 'خسارة - دينار عراقي';
        profitLabel.className = 'text-xs text-red-400 mt-1';
      } else {
        profitLabel.textContent = 'دينار عراقي';
        profitLabel.className = 'text-xs text-blue-400 mt-1';
      }
      
      // Update totals
      const incomeTotal = getIncomes().reduce((sum, item) => {
        if (item.currency === 'IQD') return sum + item.amount;
        return sum;
      }, 0);
      const incomeTotalUSD = getIncomes().reduce((sum, item) => {
        if (item.currency === 'USD') return sum + item.amount;
        return sum;
      }, 0);
      
      const expenseTotal = getExpenses().reduce((sum, item) => {
        if (item.currency === 'IQD') return sum + item.amount;
        return sum;
      }, 0);
      const expenseTotalUSD = getExpenses().reduce((sum, item) => {
        if (item.currency === 'USD') return sum + item.amount;
        return sum;
      }, 0);
      
      let incomeStr = formatNumber(incomeTotal) + ' IQD';
      if (incomeTotalUSD > 0) incomeStr += ' + ' + formatNumber(incomeTotalUSD) + ' USD';
      document.getElementById('income-total').textContent = incomeStr;
      
      let expenseStr = formatNumber(expenseTotal) + ' IQD';
      if (expenseTotalUSD > 0) expenseStr += ' + ' + formatNumber(expenseTotalUSD) + ' USD';
      document.getElementById('expense-total').textContent = expenseStr;
      
      // Recent transactions
      renderRecentTransactions();
    }
    
    // ==================== Render Functions ====================
    function renderAllLists() {
      renderIncomeList();
      renderExpenseList();
      renderLedger();
      renderConversionHistory();
    }
    
    function renderIncomeList() {
      const list = document.getElementById('income-list');
      const incomes = getIncomes().sort((a, b) => new Date(b.date) - new Date(a.date));
      
      if (incomes.length === 0) {
        list.innerHTML = '<p class="text-gray-500 text-center py-8">لا توجد إيرادات بعد</p>';
        return;
      }
      
      list.innerHTML = incomes.map(item => `
        <div class="bg-[#2a2a2a] rounded-xl p-4 flex items-center justify-between" data-id="${item.__backendId}">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-emerald-500/20 rounded-xl flex items-center justify-center">
              <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12"></path>
              </svg>
            </div>
            <div>
              <p class="text-white font-medium">${item.description}</p>
              <p class="text-gray-500 text-sm">${item.category} • ${formatDate(item.date)}</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div class="text-left">
              <p class="text-emerald-400 font-bold">${formatNumber(item.amount)}</p>
              <p class="text-gray-500 text-xs">${item.currency}</p>
            </div>
            <div class="flex gap-1">
              <button onclick="editIncome('${item.__backendId}')" class="p-2 text-gray-400 hover:text-blue-400 transition">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              </button>
              <button onclick="confirmDelete('${item.__backendId}', 'income')" class="p-2 text-gray-400 hover:text-red-400 transition">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
      `).join('');
    }
    
    function renderExpenseList() {
      const list = document.getElementById('expense-list');
      const expenses = getExpenses().sort((a, b) => new Date(b.date) - new Date(a.date));
      
      if (expenses.length === 0) {
        list.innerHTML = '<p class="text-gray-500 text-center py-8">لا توجد مصروفات بعد</p>';
        return;
      }
      
      list.innerHTML = expenses.map(item => `
        <div class="bg-[#2a2a2a] rounded-xl p-4 flex items-center justify-between" data-id="${item.__backendId}">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-red-500/20 rounded-xl flex items-center justify-center">
              <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 13l-5 5m0 0l-5-5m5 5V6"></path>
              </svg>
            </div>
            <div>
              <p class="text-white font-medium">${item.description}</p>
              <p class="text-gray-500 text-sm">${item.category} • ${formatDate(item.date)}</p>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <div class="text-left">
              <p class="text-red-400 font-bold">${formatNumber(item.amount)}</p>
              <p class="text-gray-500 text-xs">${item.currency}</p>
            </div>
            <div class="flex gap-1">
              <button onclick="editExpense('${item.__backendId}')" class="p-2 text-gray-400 hover:text-blue-400 transition">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
              </button>
              <button onclick="confirmDelete('${item.__backendId}', 'expense')" class="p-2 text-gray-400 hover:text-red-400 transition">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
      `).join('');
    }
    
    function renderLedger() {
      const tbody = document.getElementById('ledger-body');
      const filter = document.getElementById('ledger-filter').value;
      
      let transactions = [...getIncomes(), ...getExpenses()];
      
      if (filter === 'income') {
        transactions = getIncomes();
      } else if (filter === 'expense') {
        transactions = getExpenses();
      }
      
      transactions.sort((a, b) => new Date(b.date) - new Date(a.date));
      
      if (transactions.length === 0) {
        tbody.innerHTML = '<tr><td colspan="6" class="text-center py-8 text-gray-500">لا توجد معاملات بعد</td></tr>';
        return;
      }
      
      tbody.innerHTML = transactions.map(item => `
        <tr class="border-b border-gray-800 hover:bg-[#2a2a2a] transition">
          <td class="py-3 px-4 text-gray-300">${formatDate(item.date)}</td>
          <td class="py-3 px-4 text-white">${item.description}</td>
          <td class="py-3 px-4 text-gray-400">${item.category}</td>
          <td class="py-3 px-4 font-bold ${item.type === 'income' ? 'text-emerald-400' : 'text-red-400'}">
            ${item.type === 'income' ? '+' : '-'}${formatNumber(item.amount)}
          </td>
          <td class="py-3 px-4 text-gray-400">${item.currency}</td>
          <td class="py-3 px-4">
            <span class="px-2 py-1 rounded-full text-xs ${item.type === 'income' ? 'bg-emerald-500/20 text-emerald-400' : 'bg-red-500/20 text-red-400'}">
              ${item.type === 'income' ? 'إيراد' : 'مصروف'}
            </span>
          </td>
        </tr>
      `).join('');
    }
    
    function renderRecentTransactions() {
      const container = document.getElementById('recent-transactions');
      const transactions = [...getIncomes(), ...getExpenses()]
        .sort((a, b) => new Date(b.date) - new Date(a.date))
        .slice(0, 5);
      
      if (transactions.length === 0) {
        container.innerHTML = '<p class="text-gray-500 text-center py-8">لا توجد معاملات بعد</p>';
        return;
      }
      
      container.innerHTML = transactions.map(item => `
        <div class="flex items-center justify-between py-3 border-b border-gray-800 last:border-0">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 ${item.type === 'income' ? 'bg-emerald-500/20' : 'bg-red-500/20'} rounded-xl flex items-center justify-center">
              <svg class="w-5 h-5 ${item.type === 'income' ? 'text-emerald-400' : 'text-red-400'}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                ${item.type === 'income' 
                  ? '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12"></path>'
                  : '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 13l-5 5m0 0l-5-5m5 5V6"></path>'
                }
              </svg>
            </div>
            <div>
              <p class="text-white font-medium">${item.description}</p>
              <p class="text-gray-500 text-sm">${formatDate(item.date)}</p>
            </div>
          </div>
          <p class="font-bold ${item.type === 'income' ? 'text-emerald-400' : 'text-red-400'}">
            ${item.type === 'income' ? '+' : '-'}${formatNumber(item.amount)} ${item.currency}
          </p>
        </div>
      `).join('');
    }
    
    function renderConversionHistory() {
      const container = document.getElementById('conversion-history');
      const conversions = getConversions().sort((a, b) => new Date(b.date) - new Date(a.date));
      
      if (conversions.length === 0) {
        container.innerHTML = '<p class="text-gray-500 text-center py-8">لا توجد تحويلات بعد</p>';
        return;
      }
      
      container.innerHTML = conversions.map(item => `
        <div class="bg-[#2a2a2a] rounded-xl p-4" data-id="${item.__backendId}">
          <div class="flex items-center justify-between mb-2">
            <span class="text-gray-400 text-sm">${formatDate(item.date)}</span>
            <button onclick="confirmDelete('${item.__backendId}', 'conversion')" class="p-1 text-gray-400 hover:text-red-400 transition">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          <div class="flex items-center gap-3">
            <div class="flex-1 text-center">
              <p class="text-2xl font-bold text-white">${formatNumber(item.fromAmount)}</p>
              <p class="text-blue-400 font-medium">${item.fromCurrency}</p>
            </div>
            <svg class="w-6 h-6 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
            <div class="flex-1 text-center">
              <p class="text-2xl font-bold text-emerald-400">${formatNumber(item.toAmount)}</p>
              <p class="text-emerald-400 font-medium">${item.toCurrency}</p>
            </div>
          </div>
          <p class="text-center text-gray-500 text-sm mt-2">سعر الصرف: ${formatNumber(item.rate)} IQD/USD</p>
        </div>
      `).join('');
    }
    
    // ==================== CRUD Operations ====================
    
    // Income
    document.getElementById('add-income-form').addEventListener('submit', async function(e) {
      e.preventDefault();
      if (isLoading) return;
      
      const editId = document.getElementById('income-edit-id').value;
      const data = {
        type: 'income',
        description: document.getElementById('income-desc').value,
        amount: parseFloat(document.getElementById('income-amount').value),
        currency: document.getElementById('income-currency').value,
        category: document.getElementById('income-category').value,
        date: document.getElementById('income-date').value
      };
      
      if (allData.length >= 999 && !editId) {
        showToast('تم الوصول للحد الأقصى من السجلات (999)', 'error');
        return;
      }
      
      isLoading = true;
      document.getElementById('income-btn-text').textContent = 'جاري الحفظ...';
      
      let result;
      if (editId) {
        const existing = allData.find(item => item.__backendId === editId);
        result = await window.dataSdk.update({ ...existing, ...data });
      } else {
        result = await window.dataSdk.create(data);
      }
      
      isLoading = false;
      document.getElementById('income-btn-text').textContent = 'إضافة الإيراد';
      
      if (result.isOk) {
        showToast(editId ? 'تم تحديث الإيراد بنجاح' : 'تم إضافة الإيراد بنجاح');
        this.reset();
        document.getElementById('income-edit-id').value = '';
        document.getElementById('income-date').value = new Date().toISOString().split('T')[0];
      } else {
        showToast('حدث خطأ أثناء الحفظ', 'error');
      }
    });
    
    function editIncome(id) {
      const item = allData.find(i => i.__backendId === id);
      if (!item) return;
      
      document.getElementById('income-desc').value = item.description;
      document.getElementById('income-amount').value = item.amount;
      document.getElementById('income-currency').value = item.currency;
      document.getElementById('income-category').value = item.category;
      document.getElementById('income-date').value = item.date;
      document.getElementById('income-edit-id').value = id;
      document.getElementById('income-btn-text').textContent = 'تحديث الإيراد';
      
      document.getElementById('income-form').scrollIntoView({ behavior: 'smooth' });
    }
    
    // Expenses
    document.getElementById('add-expense-form').addEventListener('submit', async function(e) {
      e.preventDefault();
      if (isLoading) return;
      
      const editId = document.getElementById('expense-edit-id').value;
      const data = {
        type: 'expense',
        description: document.getElementById('expense-desc').value,
        amount: parseFloat(document.getElementById('expense-amount').value),
        currency: document.getElementById('expense-currency').value,
        category: document.getElementById('expense-category').value,
        date: document.getElementById('expense-date').value
      };
      
      if (allData.length >= 999 && !editId) {
        showToast('تم الوصول للحد الأقصى من السجلات (999)', 'error');
        return;
      }
      
      isLoading = true;
      document.getElementById('expense-btn-text').textContent = 'جاري الحفظ...';
      
      let result;
      if (editId) {
        const existing = allData.find(item => item.__backendId === editId);
        result = await window.dataSdk.update({ ...existing, ...data });
      } else {
        result = await window.dataSdk.create(data);
      }
      
      isLoading = false;
      document.getElementById('expense-btn-text').textContent = 'إضافة المصروف';
      
      if (result.isOk) {
        showToast(editId ? 'تم تحديث المصروف بنجاح' : 'تم إضافة المصروف بنجاح');
        this.reset();
        document.getElementById('expense-edit-id').value = '';
        document.getElementById('expense-date').value = new Date().toISOString().split('T')[0];
      } else {
        showToast('حدث خطأ أثناء الحفظ', 'error');
      }
    });
    
    function editExpense(id) {
      const item = allData.find(i => i.__backendId === id);
      if (!item) return;
      
      document.getElementById('expense-desc').value = item.description;
      document.getElementById('expense-amount').value = item.amount;
      document.getElementById('expense-currency').value = item.currency;
      document.getElementById('expense-category').value = item.category;
      document.getElementById('expense-date').value = item.date;
      document.getElementById('expense-edit-id').value = id;
      document.getElementById('expense-btn-text').textContent = 'تحديث المصروف';
      
      document.getElementById('expense-form').scrollIntoView({ behavior: 'smooth' });
    }
    
    // Delete
    function confirmDelete(id, type) {
      document.getElementById('delete-modal').classList.remove('hidden');
      
      document.getElementById('confirm-delete-btn').onclick = async function() {
        const item = allData.find(i => i.__backendId === id);
        if (!item) return;
        
        isLoading = true;
        this.textContent = 'جاري الحذف...';
        
        const result = await window.dataSdk.delete(item);
        
        isLoading = false;
        this.textContent = 'نعم، احذف';
        closeDeleteModal();
        
        if (result.isOk) {
          showToast('تم الحذف بنجاح');
        } else {
          showToast('حدث خطأ أثناء الحذف', 'error');
        }
      };
    }
    
    function closeDeleteModal() {
      document.getElementById('delete-modal').classList.add('hidden');
    }
    
    // ==================== Currency Converter ====================
    document.getElementById('from-amount').addEventListener('input', calculateConversion);
    document.getElementById('from-currency').addEventListener('change', calculateConversion);
    document.getElementById('to-currency').addEventListener('change', calculateConversion);
    document.getElementById('exchange-rate').addEventListener('input', calculateConversion);
    
    function calculateConversion() {
      const fromAmount = parseFloat(document.getElementById('from-amount').value) || 0;
      const fromCurrency = document.getElementById('from-currency').value;
      const toCurrency = document.getElementById('to-currency').value;
      const rate = parseFloat(document.getElementById('exchange-rate').value) || 1460;
      
      let result = 0;
      
      if (fromCurrency === toCurrency) {
        result = fromAmount;
      } else if (fromCurrency === 'USD' && toCurrency === 'IQD') {
        result = fromAmount * rate;
      } else if (fromCurrency === 'IQD' && toCurrency === 'USD') {
        result = fromAmount / rate;
      }
      
      document.getElementById('to-amount').value = formatNumber(parseFloat(result.toFixed(2)));
    }
    
    function swapCurrencies() {
      const fromCurrency = document.getElementById('from-currency');
      const toCurrency = document.getElementById('to-currency');
      const temp = fromCurrency.value;
      fromCurrency.value = toCurrency.value;
      toCurrency.value = temp;
      calculateConversion();
    }
    
    document.getElementById('convert-form').addEventListener('submit', async function(e) {
      e.preventDefault();
      if (isLoading) return;
      
      const fromAmount = parseFloat(document.getElementById('from-amount').value);
      if (!fromAmount || fromAmount <= 0) {
        showToast('الرجاء إدخال مبلغ صحيح', 'error');
        return;
      }
      
      if (allData.length >= 999) {
        showToast('تم الوصول للحد الأقصى من السجلات (999)', 'error');
        return;
      }
      
      const fromCurrency = document.getElementById('from-currency').value;
      const toCurrency = document.getElementById('to-currency').value;
      const rate = parseFloat(document.getElementById('exchange-rate').value) || 1460;
      
      let toAmount = 0;
      if (fromCurrency === toCurrency) {
        toAmount = fromAmount;
      } else if (fromCurrency === 'USD' && toCurrency === 'IQD') {
        toAmount = fromAmount * rate;
      } else if (fromCurrency === 'IQD' && toCurrency === 'USD') {
        toAmount = fromAmount / rate;
      }
      
      const data = {
        type: 'conversion',
        fromCurrency,
        toCurrency,
        fromAmount,
        toAmount: parseFloat(toAmount.toFixed(2)),
        rate,
        date: new Date().toISOString()
      };
      
      isLoading = true;
      const result = await window.dataSdk.create(data);
      isLoading = false;
      
      if (result.isOk) {
        showToast('تم حفظ التحويل بنجاح');
        document.getElementById('from-amount').value = '';
        document.getElementById('to-amount').value = '';
      } else {
        showToast('حدث خطأ أثناء الحفظ', 'error');
      }
    });
    
    // ==================== Ledger Filter ====================
    document.getElementById('ledger-filter').addEventListener('change', renderLedger);
    
    // ==================== Profile ====================
    document.getElementById('profile-form').addEventListener('submit', function(e) {
      e.preventDefault();
      
      currentUser.name = document.getElementById('edit-name').value;
      currentUser.email = document.getElementById('edit-email').value;
      currentUser.role = document.getElementById('edit-role').value;
      
      localStorage.setItem('currentUser', JSON.stringify(currentUser));
      updateUserDisplay();
      showToast('تم حفظ التغييرات بنجاح');
    });
    
    document.getElementById('password-form').addEventListener('submit', function(e) {
      e.preventDefault();
      
      const newPassword = document.getElementById('new-password').value;
      const confirmPassword = document.getElementById('confirm-new-password').value;
      
      if (newPassword !== confirmPassword) {
        showToast('كلمات المرور غير متطابقة', 'error');
        return;
      }
      
      showToast('تم تغيير كلمة المرور بنجاح');
      this.reset();
    });
    
    // ==================== Element SDK ====================
    async function onConfigChange(newConfig) {
      config = { ...defaultConfig, ...newConfig };
      
      // Update titles
      document.getElementById('login-title').textContent = config.app_title || defaultConfig.app_title;
      document.getElementById('sidebar-title').textContent = config.app_title || defaultConfig.app_title;
      document.getElementById('sidebar-company').textContent = config.company_name || defaultConfig.company_name;
    }
    
    function mapToCapabilities(config) {
      return {
        recolorables: [],
        borderables: [],
        fontEditable: undefined,
        fontSizeable: undefined
      };
    }
    
    function mapToEditPanelValues(config) {
      return new Map([
        ['app_title', config.app_title || defaultConfig.app_title],
        ['company_name', config.company_name || defaultConfig.company_name]
      ]);
    }
    
    // ==================== Initialization ====================
    async function init() {
      // Set default dates
      document.getElementById('income-date').value = new Date().toISOString().split('T')[0];
      document.getElementById('expense-date').value = new Date().toISOString().split('T')[0];
      
      // Check for existing user session
      const savedUser = localStorage.getItem('currentUser');
      if (savedUser) {
        currentUser = JSON.parse(savedUser);
        enterApp();
      }
      
      // Initialize Element SDK
      if (window.elementSdk) {
        window.elementSdk.init({
          defaultConfig,
          onConfigChange,
          mapToCapabilities,
          mapToEditPanelValues
        });
      }
      
      // Initialize Data SDK
      if (window.dataSdk) {
        const result = await window.dataSdk.init(dataHandler);
        if (!result.isOk) {
          console.error('Failed to initialize Data SDK');
        }
      }
    }
    
    init();
  </script>
